<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B296B5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/barras"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/barras"
            android:transitionName="logo_barras" />

        <ImageView
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/logo_name"
            android:transitionName="logo_nome" />

        <TextView
            android:id="@+id/text_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Confirmation code"
            android:textAlignment="center"
            android:textColor="#917294"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Enter password sent on"
            android:textAlignment="center"
            android:textSize="20sp" />

        <com.chaos.view.PinView
            android:id="@+id/pin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:itemBackground="#4FFFFFFF"
            app:cursorColor="@color/black"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="40dp"
            app:itemRadius="5dp"
            app:itemWidth="40dp"
            style="@style/PinWidget.PinView"
            app:lineColor="@color/black"
            app:lineWidth="1dp"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/goToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:background="#917294"
            android:text="GO"
            android:onClick="callNextScreenFromOTP"
            app:backgroundTint="@null" />


    </LinearLayout>



</ScrollView>